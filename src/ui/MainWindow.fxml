                <Line endX="15.0" endY="7.0" startX="8.0" startY="15.0" stroke="WHITE" strokeWidth="3.0" />
                <Line endX="15.0" endY="23.0" startX="8.0" startY="15.0" stroke="WHITE" strokeWidth="3.0" />
            </children>
            <StackPane.margin>
                <Insets left="12.0" top="12.0" />
            </StackPane.margin>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </AnchorPane>
    </children>
</StackPane>
