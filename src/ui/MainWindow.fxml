                </Button>
                <Label fx:id="LblGrammar" text="Grammar" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets left="35.0" />
                    </GridPane.margin></Label>
            </children>
        </GridPane>
        <ScrollPane fx:id="ResultScrollPane" fitToWidth="true" visible="false">
            <content>
                <VBox fx:id="ResultVBox" alignment="CENTER" fillWidth="false">
                    <children>
                        <GridPane fx:id="FirstFollowGrid">
                            <columnConstraints>
                                <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints fillHeight="false" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </GridPane>
                  <GridPane fx:id="PredictGrid">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </GridPane>
                    </children>
                </VBox>
